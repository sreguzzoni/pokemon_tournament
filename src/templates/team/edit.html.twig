{% extends 'base.html.twig' %}

{% block title %}Edit Team{% endblock %}

{% block stylesheets_child %}
  <link rel="stylesheet" href="{{ asset('build/team.css') }}" />
{% endblock %}

{% block body %}
  <div class="team-list content container">
    <header class="content--header">
      <h1>Edit Team</h1>
      <h2>Aggiorna la tua squadra!</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore.</p>
    </header>
    <div class="team-list--edit">
        {{ include('team/_pokemon_list_element_local_tpl.html.twig') }}

        {{ form_start(form) }}
            <div class="input-wrapper">
                {{ form_widget(form) }}
            </div>
            <div class="team-list--edit--pokemon" id='team-{{ team.id }}'>
                <div class="pokemon-list">

                    {% for single_pokemon in team.pokemon %}
                        {{ include('team/_pokemon_list_element.html.twig') }}
                    {% endfor %}

                    {% if team.pokemon|length == 0 %}
                        <div class='pokemon-list-empty'>
                            This team is empty.
                        </div>
                    {% else %}
                        <div class='pokemon-list-empty hidden'>
                            This team is empty.
                        </div>
                    {% endif %}

                </div>
                <div class="actions">
                    {{ include('team/_pokemon_add_btn.html.twig') }}
                    <button class="btn btn-primary">Save changes</button>
                </div>
            </div>
        {{ form_end(form) }}
        <div class="actions">
            <a class="btn btn-primary" href="{{ path('team_index') }}">Back to list</a>
        </div>
    </div>
  </div>
{% endblock %}


{% block javascripts_child %}
	<script type="text/javascript" src="{{ asset('build/team.js') }}"></script>
{% endblock %}
