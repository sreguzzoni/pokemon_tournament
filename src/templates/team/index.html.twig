{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Your Teams</h1>

    {% for team in teams %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>
                        {{ team.name }}
                    </td>
                </tr>

                <tr>
                    <th>Pokemon</th>
                    <td>
                        {% for single_pokemon in team.pokemon %}
                            {{ single_pokemon }}
                        {% else %}
                            This team is empty.
                        {% endfor %}
                    </td>
                </tr>

                <tr>
                    <th>Actions</th>
                    <td>
                        {{ include('team/_delete_form.html.twig') }}
                    </td>
                    <td>
                        <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
                    </td>
                    <td>
                        <button class="ajax" data-path='{{ (path('add_new_pokemon')) }}' data-team='{{ team }}'>
                            Add a Pokemon!
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    {% else %}
        <table class="table">
            <tr>
                <td>
                    No teams found.
                </td>
            </tr>
        </table>
    {% endfor %}

    <a href="{{ path('team_new') }}">Create new team!</a>
{% endblock %}

{% block javascripts_child %}
    <script type="text/javascript" src="{{ asset('build/team.js') }}"></script>
{% endblock %}
