<div class='pokemon-list--single' id='pokemon-{{ single_pokemon.id }}' pokemon-team='{{ team.id }}' pokemon-number='{{ single_pokemon.number }}'>
	<div class='name'>
		{{ single_pokemon.name }}
	</div>
	<div class='exp'>
		{{ single_pokemon.exp }}
	</div>
	<div class='img-wrapper'>
        <img src='{{ single_pokemon.img }}' alt='{{ single_pokemon.name }}'/>
    </div>

	<div class='abilities'>
		{% for ability in single_pokemon.abilities %}
            <span class='ability'>{{ ability }}</span>
        {% endfor %}
	</div>
    <div class='types'>
    	{% for type in single_pokemon.types %}
            <span class='type'>{{ type }}</span>
        {% endfor %}
    </div>
	<button class='pokemon-remove-btn' data-path='local' data-pokemon='{{ single_pokemon.id }}'>
		Remove
	</button>
</div>