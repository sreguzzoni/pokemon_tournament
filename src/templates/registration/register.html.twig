{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets_child %}
  <link rel="stylesheet" href="{{ asset('build/login.css') }}" />
{% endblock %}

{% block body %}
  <div class="user content container">
    <h1>Please sign in</h1>

    {{ form_start(registrationForm) }}
        <div class="input-wrapper">
          {{ form_row(registrationForm.email) }}
        </div>
        <div class="input-wrapper">
          {{ form_row(registrationForm.plainPassword) }}
        </div>
        <div class="input-wrapper--checkbox">
          <input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" value="1">
          <label for="registration_form_agreeTerms" class="required">Agree terms</label>
        </div>

        <button class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
    <a href="/login">Back to login</a>
  </div>
{% endblock %}
